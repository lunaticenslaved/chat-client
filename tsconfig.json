{
  "extends": [
    "./node_modules/@lunaticenslaved/schema/tsconfig.base.json",
    "./tsconfig.paths.json"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "types": ["node", "vite/client", "vite-plugin-svgr/client"],
    "jsx": "react-jsx",

    /* Paths */
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
