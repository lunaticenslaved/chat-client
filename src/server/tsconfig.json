{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "compilerOptions": {
    "target": "es6",
    "types": ["node", "jest"],
    "module": "CommonJS",

    "outDir": "../../dist",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
        "@/*": ["./*"],
        "@store": ["../store/index.ts"],
        "@domain/*": ["../domain/*"],
        "@api/*": ["../api/*"]
    }
  },
  "exclude": ["../client"]
}
